{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"svelteStrictMode": true,
	"bracketSameLine": true,
	"tailwindStylesheet": "./src/app.css",
	"htmlWhitespaceSensitivity": "ignore",
	"tailwindFunctions": ["clsx", "cn", "twMerge"],
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
